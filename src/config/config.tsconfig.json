{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["esnext", "scripthost", "es5"]
  },
  "exclude": ["node_modules"]
}
